@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<div class="row">
    <div style="float:right;">
        @Html.ActionLink(" Agregar Usuario", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-primary " })
    </div>
</div>
<hr />
<div class="row">
    @if (Model.Usuarios != null)
    {
        <table class="table table-light table-bordered table-responsive table-hover" id="tblUsuario">
            <thead>
                <tr>

                    <td class="table-info text-center" style=" font-weight:bold;">Editar</td>
                    <td class="d-none">IdUsuario</td>
                    <td class="table-info text-center" style=" font-weight:bold;">Nombre</td>
                    <td class="table-info text-center" style=" font-weight:bold;">Username</td>
                    <td class="table-info text-center" style=" font-weight:bold;">Contrasena</td>
                    <td class="d-none">IdAutomovil</td>
                    <td class="table-info text-center" style=" font-weight:bold;">Placas</td>
                    <td class="table-info text-center" style=" font-weight:bold;">Eliminar</td>

                </tr>
            </thead>
            <tbody>

                @foreach (ML.Usuario usuario in Model.Usuarios)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"><i class="fa-solid fa-eraser"></i> </a></td>
                        <td class="d-none">@usuario.IdUsuario</td>
                        <td class="text-center">@usuario.Nombre @usuario.Apellido</td>
                        <td class="text-center">@usuario.Username </td>
                        <td class="text-center">@usuario.Contrasena</td>
                        <td class="d-none">@usuario.Automovil.IdAutomovil</td>
                        <td class="text-center">@usuario.Automovil.Placa</td>
                        <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger" href="@Url.Action("Delete", "Usuario", new { IdUsuario= usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="fa-regular fa-circle-xmark"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
    }
</div>
